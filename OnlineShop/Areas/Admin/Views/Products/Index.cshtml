                .DataSource(dataSource => dataSource
                .Ajax()
                .Read(read => read.Action("Read", "Products"))
                .PageSize(15)
            )
        )*@

        </div>

    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#add').click(function () {
                window.location.href = "@Url.Action("Create","Products")";
            });
        });
    </script>
}

