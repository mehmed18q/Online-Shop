                columns.Bound(c => c.Description);

                columns.Bound(c => c.CategoryTitle);
                columns.Bound(c => c.MainImageTitle);

            })
            .HtmlAttributes(new { style = "height: 550px;" })
            .Scrollable()
            .Groupable()
            .Sortable()
            .Pageable(pageable => pageable
                .Refresh(true)
