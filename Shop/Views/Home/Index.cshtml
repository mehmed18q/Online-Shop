<!--Register in Newsletters -->
<div id="Newsletters" style="direction: rtl;">
    <div class="container mb-4">
        <h4 class="mb-3 titr" style="color: #686868;">عضویت در خبر نامه</h4>
        <div class="form-group">
            <h6 style="text-align: center; color: #535353;" class="mb-4">با عضویت در خبر نامه از تخفیف‌ها و جدیدترین‌ها باخبر شوید</h6>
            <div class="row">
                <div class="col-lg-2 col-sm-0"></div>
                <div class="col-lg-6 col-sm-12">
                    <input type="email" class="form-control" name="email" id="email" aria-describedby="emailHelpId" placeholder="آدرس ایمیل خود را وارد کنید">
                    <small id="emailHelpId" class="form-text text-muted">ایمیل شما رو منتشر نمیکنیم</small>
                </div>
                <div class="col-lg-2 col-sm-12">
                    <button onclick="registgerMe()" class="btn btn-outline-primary btn-md btn-block">عضوم کن!</button>
                </div>
                <div class="col-lg-2 col-sm-0"></div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
<script>
    function registgerMe(){
        var _email = document.getElementById('email').value;
        var request = $.ajax({
        url: "@Url.Action("NewslettersRegister", "User")",
        type: 'POST',
        data: { email: _email } ,
        contentType: 'application/json; charset=utf-8'});
        request.done(function(data) {
            document.getElementById('Newsletters').style.display = "none";
        });
        request.fail(function (jqXHR, textStatus) {
            console.log('خطایی رخ داده است');
        });
    }
</script>
}