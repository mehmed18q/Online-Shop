    <script>
        function Search(){
            var text = document.getElementById("searchText").value;
            if(text == undefined || text == 'undefined'){
                text = null;
            }
            window.location.href = window.origin + "/Products/Search?text=" + text;
        }

        $(document).ready(function () {
            if(decodeURI(window.location.href.split('=')[1]) != undefined
        && decodeURI(window.location.href.split('=')[1])!= 'undefined'
        && !window.location.href.includes('id'){
                document.getElementById('searchText').value = decodeURI(window.location.href.split('=')[1])
            }
            $('#sign-in').click(function () {
                window.location.href = "@Url.Action("SignIn","User")";
            });

            $('#Index').click(function () {
                window.location.href = "@Url.Action("Index","Home", new { Area = "" })";
            });

            $(document).on('click', '.category', function () {
                var id = $(this).attr("id");
