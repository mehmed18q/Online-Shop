@{
    Layout = "~/Views/Shared/_SignLayout.cshtml";
    ViewData["Title"] = "ورود";
}

<form method="post" enctype="multipart/form-data" asp-controller="User" asp-action="SignIn" class="form-signin" style="margin-top: 100px; direction: rtl;">
    <a id="Index">
        <img class="temp-logo" src="~/images/logo/logo.png" alt="صادق‌کالا">
    </a>
    <h1 class="h3 mb-3 font-weight-normal">ورود به صادق‌کالا</h1>
    <label for="email" class="sr-only">text</label>
    <input style="text-align: right;" type="text" id="email" name="email" class="form-control mb-2" placeholder="ايميل يا شماره موبايل" required autofocus>
    <label for="password" class="sr-only">Password</label>
    <input style="text-align: right;" type="password" id="password" name="password" class="form-control mb-3" placeholder="رمز ‌عبور" required>
    <div class="checkbox mb-3">
        <label>
            <input type="checkbox" value="remember-me"> مرا به خاطرت نگه دار
        </label>
    </div>
    @if (ViewBag.Message != null)
    {
        <div class="alert alert-danger" role="alert">
            @ViewBag.Message
        </div>
    }
    <button class="btn btn-lg btn-info btn-block" type="submit">ورود به صادق‌کالا</button>
    <div class="row">
        <p class="mt-5 mb-3 text-muted" style="padding-left: 0.5rem;">كاربر جديد هستيد؟</p>
        <a id="SignUp" class="mt-5 mb-3 text-muted">ثبت نام كنيد</a>
    </div>
</form>

@section Scripts{
<script src="~/js/jquery-3.5.1.min.js"></script>
<script>
    $(document).ready(function () {
        $('#SignUp').click(function () {
            window.location.href = "@Url.Action("SignUp","User")";
        });

        $('#Index').click(function () {
            window.location.href = "@Url.Action("Index","Home")";
        });
    });
</script>
}