@{
    Layout = "~/Views/Shared/_SignLayout.cshtml";
    ViewData["Title"] = "ثبت نام";
}

<form method="post" enctype="multipart/form-data" asp-controller="User" asp-action="SignUp" class="form-signin" style="margin-top: 100px; direction: rtl;">
    <a id="Index">
        <img class="temp-logo" src="~/images/logo/logo.png" alt="صادق‌کالا">
    </a>
    <h1 class="h3 mb-3 font-weight-normal">ثبت نام در صادق‌کالا</h1>
    <label for="email" class="sr-only">Email address</label>
    <input style="text-align: right;" type="email" id="email" name="email" class="form-control mb-2" placeholder="ايميل يا شماره موبايل" required autofocus>
    <label for="password" class="sr-only">Password</label>
    <input style="text-align: right;" type="password" id="password" name="password" class="form-control mb-3" placeholder="رمز ‌عبور" required>
    <div class="checkbox mb-3">
        <label>
            <input type="checkbox" value="remember-me"> حریم خصوصی و شرایط و قوانین استفاده از سرویس های سایت صادق‌کالا را مطالعه نموده و با کلیه موارد آن موافقم.
        </label>
    </div>
    <button class="btn btn-lg btn-info btn-block" type="submit">ثبت نام در صادق‌کالا</button>
    <div class="row">
        <p class="mt-5 mb-3 text-muted" style="padding-left: 0.5rem;">قبلا ثبت نام کرده اید؟</p>
        <a id="SignIn" class="mt-5 mb-3 text-muted">وارد شوید</a>
    </div>
</form>

@section Scripts{
<script>
    $(document).ready(function () {
        $('#SignIn').click(function () {
            window.location.href = "@Url.Action("SignIn","User")";
        });
        $('#Index').click(function () {
            window.location.href = "@Url.Action("Index","Home")";
        });
    });
</script>
}